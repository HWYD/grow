page {
  background-color: #f7f7f7;
}
.currentTime {
  width: 100%;
  height: 500rpx;
  /* background-color: red; */
}
canvas {
  width: 100%;
  height: 100%;
}
.currentTime image {
  width: 400rpx;
  height: 400rpx;
}
.title {
  /* margin-top: 20rpx; */
  font-size: 50rpx;
  font-weight: 600rpx;
  text-align: center;
}
.context {
  width: 664rpx;
  margin: 0 auto;
  color: rgb(211, 211, 211);
  padding: 10rpx 0;
  font-size: 30rpx;
}
.context1 {
  width: 550rpx;
  margin: 0 auto;
  color: rgb(211, 211, 211);
  padding: 10rpx 0;
  font-size: 30rpx;
}
.timeList {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  max-width: 670rpx;
  width: auto;
  margin: 0 auto;
  border: solid 1rpx rgb(211, 211, 211);
}
.timeItem {
  display: flex;
  flex-direction: column;
  width: 220rpx;
  height: 130rpx;
  text-align: center;
  border-bottom: solid 1rpx rgb(211, 211, 211);
  border-right: solid 1rpx rgb(211, 211, 211); 
}
/* 第3个和第6个 */
.timeItem:nth-child(3n+3){
  border-right: none;
}
.timeItem:last-child{
  width: 100%;
  height: 130rpx;
  border: none;
}
.litter-box {
  width: 100%;
  height: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 切换的css */
.timeList1 {
  border-top: solid 1rpx rgb(211, 211, 211);
  border-left: solid 1rpx rgb(211, 211, 211);
  height: 637rpx;
  width: 550rpx;
  margin: 0 auto;
}
.timeItem1 {
  width: 550rpx;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  border-right: solid 1rpx rgb(211, 211, 211);
  border-bottom: solid 1rpx rgb(211, 211, 211);
}
.litter-otherbox {
  width: 60%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.litter-otherbox1 {
  width: 40%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.motto {
  width: 660rpx;
  height: auto;
  margin: 0 auto;
  margin-top: 38rpx;
  font-size: 30rpx;
  text-indent: 2em;
  line-height: 50rpx;
  padding: 10rpx;
  padding-top: 20rpx;
  background-color: rgba(182, 180, 180, 0.1);
  letter-spacing: 1rpx;
  /* box-shadow: 0px 4px 5px 0px rgba(0, 0, 0, 0.1); */
  word-break: break-all;
  word-wrap: break-word;
}

.setting {
  position: fixed;
  right: 30rpx;
  top: 20rpx;
  padding: 7px;
}
